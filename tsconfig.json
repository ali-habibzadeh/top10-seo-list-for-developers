{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "target": "esNext",
    "lib": ["es2017", "dom", "esnext", "dom.iterable"],
    "typeRoots": ["node_modules/typings", "@types"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
