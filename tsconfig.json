{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "target": "esNext",
    "lib": ["es2017", "dom", "esnext", "dom.iterable"],
    "typeRoots": ["node_modules/typings", "@types"],
    "paths": {
      "robots-parser": ["src/@types/robots-parser.d.ts"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
  "typedocOptions": {
    "mode": "file",
    "excludeNotExported": true,
    "readme": "none"
  }
}
